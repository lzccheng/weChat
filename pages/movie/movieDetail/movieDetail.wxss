.header_background {
  width: 750rpx;
  height: 350rpx;
  -webkit-filter: blur(10px);
  overflow: hidden;
}

.header_msg {
  position: absolute;
  top: 0;
  left: 0;
}

.header_msg .movie_title {
  width: 400rpx;
  margin: 20rpx 0 0 25rpx;
  text-align: center;
}

.header_msg .movie_title text {
  font-size: 45rpx;
  white-space: normal;
  color:#222;
}
